<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image">Upload and Imges</i>
        </h3>
    </div>

    <div class="card-body">
        <!--
            enctype="multipart/form-data"
            sirve para poderle pasar datos mas grandes que un archivo de texto
            en este caso es una imagen
        -->
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="coustom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="TItle for the image" required>

            </div>
            <div class="form-group">
                <textarea name="description" id="" cols="30" rows="2" class="form-control"
                    placeholder="Description for the image"></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i>Upload Image
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <i class="far fa-images"></i> Recent Uploads
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="col-md-4 text-center">
                <a href="/images/{{ uniqueId  }}">
                    <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>